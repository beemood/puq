{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "Project",
  "title": "Project generator",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "project directory",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What directory would you like to use?"
    },
    "type": {
      "type": "string",
      "description": "Project type",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "enum": [
        "lib",
        "api",
        "plugin",
        "prisma"
      ],
      "x-prompt": "What type of project would you like to use?"
    }
  },
  "required": [
    "directory",
    "type"
  ]
}