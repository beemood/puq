generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

generator zodGenerator {
  provider = "zod-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("COMMON_DB_URL")
}

model Attribute {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Country {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  countryCode String?
  phoneCode   String?
  flag        String?

  states State[]
}

model State {
  id        Int     @id @default(autoincrement())
  countryId Int
  name      String  @unique
  flag      String?

  country Country @relation(fields: [countryId], references: [id])
}

model Currency {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  symbol String?
}

model ExpenseType {
  id          Int     @id @default(autoincrement())
  parentId    Int?
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?
  icon        String?
  image       String?

  parent   ExpenseType?  @relation("c", fields: [parentId], references: [id], onDelete: SetNull)
  children ExpenseType[] @relation("c")
}

model ContentType {
  id          Int     @id @default(autoincrement())
  parentId    Int?
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?
  icon        String?
  image       String?

  parent   ContentType?  @relation("c", fields: [parentId], references: [id], onDelete: SetNull)
  children ContentType[] @relation("c")
}

model Category {
  id          Int     @id @default(autoincrement())
  parentId    Int?
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?
  icon        String?
  image       String?

  parent   Category?  @relation("c", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("c")
}

model Department {
  id          Int     @id @default(autoincrement())
  parentId    Int?
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?
  icon        String?
  image       String?

  parent   Department?  @relation("c", fields: [parentId], references: [id], onDelete: SetNull)
  children Department[] @relation("c")
}

model Industry {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  slug        String  @unique @default(uuid())

  occupations       Occupation[]
  companyIndustries CompanyIndustry[]
}

model Occupation {
  id          Int     @id @default(autoincrement())
  industryId  Int
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?

  industry Industry @relation(fields: [industryId], references: [id])
}

model Major {
  id          Int     @id @default(autoincrement())
  industryId  Int
  name        String  @unique
  slug        String  @unique @default(uuid())
  description String?
}

model Company {
  id   Int    @id @default(autoincrement())
  name String @unique
  slug String @unique @default(uuid())

  companyIndustries CompanyIndustry[]
}

model CompanyIndustry {
  id         Int @id @default(autoincrement())
  companyId  Int
  industryId Int

  company  Company  @relation(fields: [companyId], references: [id])
  industry Industry @relation(fields: [industryId], references: [id])

  @@unique([companyId, industryId])
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
  slug String @unique @default(uuid())
}

model HtmlTemplate {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique @default(uuid())
  description String?
  tags        String[]
  template    String
}

model Record {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}
